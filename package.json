{
  "name": "tiagoporto.com",
  "type": "module",
  "version": "0.0.0-development",
  "private": true,
  "engines": {
    "node": ">=23",
    "npm": "uses pnpm",
    "pnpm": ">=10"
  },
  "packageManager": "pnpm@10.6.4",
  "scripts": {
    "preinstall": "npx -y only-allow pnpm",
    "postinstall": "$CI = true || (dependabot-config && editor-config)",
    "prepare": "husky",
    "checks": "pnpm check-docs && pnpm format:check",
    "check-docs": "remark . --ext md,markdown,mdx",
    "format:check": "prettier --check --ignore-unknown \"**/*\"",
    "format": "npm run format:check -- --write",
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro"
  },
  "dependencies": {
    "@astrojs/mdx": "^4.2.3",
    "@astrojs/rss": "^4.0.11",
    "@astrojs/sitemap": "^3.3.1",
    "astro": "^5.14.5"
  },
  "devDependencies": {
    "@astrojs/markdown-remark": "^6.3.2",
    "@tiagoporto/dependabot-config": "^2.4.1",
    "@tiagoporto/editor-config": "^2.1.0",
    "@tiagoporto/prettier-config": "^2.1.0",
    "@tiagoporto/remark-config": "^1.11.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "rehype-autolink-headings": "^7.1.0",
    "remark": "^15.0.1",
    "remark-cli": "^12.0.1"
  }
}
