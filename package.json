{
  "name": "tiagoporto.com",
  "type": "module",
  "version": "0.0.0-development",
  "private": true,
  "engines": {
    "node": ">=23",
    "npm": "uses pnpm",
    "pnpm": ">=10"
  },
  "packageManager": "pnpm@10.6.4",
  "scripts": {
    "preinstall": "npx -y only-allow pnpm",
    "postinstall": "$CI = true || (dependabot-config && editor-config)",
    "check-update": "pnpm update --interactive --latest",
    "checks": "pnpm check-docs && pnpm format:check",
    "check-docs": "remark . --ext md,markdown,mdx",
    "format:check": "prettier --check --ignore-unknown \"**/*\"",
    "format": "npm run format:check -- --write",
    "typecheck": "tsc --project tsconfig.json",
    "lint:styles": "stylelint \"**/*.{css,scss}\"",
    "lint:styles:fix": "stylelint \"**/*.{css,scss}\" --fix",
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro"
  },
  "dependencies": {
    "@astrojs/mdx": "^4.3.9",
    "@astrojs/rss": "^4.0.13",
    "@astrojs/sitemap": "^3.6.0",
    "astro": "^5.15.6"
  },
  "devDependencies": {
    "@astrojs/markdown-remark": "^6.3.8",
    "@commitlint/cli": "^20.1.0",
    "@tiagoporto/dependabot-config": "^2.5.0",
    "@tiagoporto/editor-config": "^2.1.0",
    "@tiagoporto/prettier-config": "^2.1.0",
    "@tiagoporto/remark-config": "^1.11.0",
    "@tiagoporto/stylelint-config": "^1.2.0",
    "lefthook": "^2.0.2",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "rehype-autolink-headings": "^7.1.0",
    "remark": "^15.0.1",
    "remark-cli": "^12.0.1",
    "stylelint": "^16.25.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "lefthook"
    ],
    "ignoredBuiltDependencies": [
      "esbuild"
    ]
  }
}
