      document
        .getElementById('email-link')
        ?.addEventListener('click', (e: Event) => {
          e.preventDefault()
          const email = (e.currentTarget as HTMLAnchorElement)?.dataset.value

          if (!email || !navigator.clipboard) {
            return window.open('mailto:tiago@tiagoporto.com')
